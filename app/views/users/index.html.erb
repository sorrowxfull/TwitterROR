        <div class="column"> <button class="button button-outline"> <%= link_to 'Editer', edit_user_path(user) %> </button> </div>
        <div class="column"> <button class="button button-outline"> <%= link_to 'Supprimer', user, method: :delete, data: { confirm: 'êtes-vous sûr ?' } %> </button> </div>
    </div>
  <% end %>

  <div class="row">
    <h4>Site crée par Paul REBOUL et Antoine FRITSCH</h4>
